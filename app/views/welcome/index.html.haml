%h1 25分集中クラウド
%p みんなの25分を聞いている音楽ごとシェア

= form_for @workload do |f|
  = f.text_field :title

%table.table
  - @workloads.each do |workload|
    %tr
      %td= workload.title
      %td= workload.memo
      %td= workload.started_at.strftime("%Y-%m-%d %H:%I")
      %td= workload.music.title

%iframe{width:"100%", height:"400", scrolling:"no", frameborder: "no", src: "https://w.soundcloud.com/player/?visual=true&url=http%3A%2F%2Fapi.soundcloud.com%2Ftracks%2F#{@id}&show_artwork=true&client_id=#{@client_id}&auto_play=#{@auto_play.to_s}"}

